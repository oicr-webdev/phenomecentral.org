<assembly>
  <id>package</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <!-- Phenotips webapp. -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:phenomecentral-war</include>
      </includes>
      <outputDirectory>webapps/phenotips</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- Unpack the HSQLDB database files to package it in the distribution -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:database-zip</include>
      </includes>
      <outputDirectory>data</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- Solr configuration. -->
    <dependencySet>
      <includes>
        <include>org.phenotips:solr-configuration</include>
      </includes>
      <outputDirectory>data/solr/</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- Unpack Jetty files -->
    <dependencySet>
      <includes>
        <include>org.phenotips:jetty-resources</include>
      </includes>
      <outputDirectory></outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>start.sh</exclude>
        </excludes>
      </unpackOptions>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.phenotips:clinical-text-analysis-extension-ctakes-service</include>
      </includes>
      <outputDirectory>webapps/ctakes</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <!-- Copy shell scripts and set execute permissions -->
    <fileSet>
      <directory>${basedir}/src/main/resources</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*.sh</include>
        <include>**/*.bat</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
  </fileSets>
</assembly>
